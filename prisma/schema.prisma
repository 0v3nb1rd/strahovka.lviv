// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider 					= "postgresql"
  url     					= env("DATABASE_URL")
	shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	email String @unique
	name String?
	password String
	posts Post[]
}
model Service_category {
	id Int @default(autoincrement()) @id
	title String
	title_ua String?
	category String?
	category_ua String?
	short_text String?
	full_text     String?
	slug String @unique
	icon_url String?
	thumbnail_url String?
	image_url String?
	created_at DateTime? @default(now())
	service Service[]
}
model Service {
	id Int @default(autoincrement()) @id
	title String
	title_ua String?
	short_text String? 
	full_text String?
	icon_url String? 
	thumbnail_url String? 
	image_url String?
	created_at DateTime? @default(now())
	slug String @unique
	services_category_id Int
	services_category Service_category @relation(fields: [services_category_id], references: [id])
}

// News Model:
model Post {
	id Int @default(autoincrement()) @id
	title String
	title_ua String?
	category String?
	category_ua String?
	short_text String?
	full_text String?
	icon_url String?
	thumbnail_url String?
	image_url String?
	slug String @unique
	like_count Int
	views Int
	created_at DateTime? @default(now())
	author User @relation(fields: [author_id], references: [id])
	author_id Int
}